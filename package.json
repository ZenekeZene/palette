		"stylelint-scss": "^3.6.0",
		"tone": "^13.4.9"
	},
	"devDependencies": {
		"@babel/core": "7.2.0",
		"@babel/preset-env": "^7.4.4",
		"parcel-bundler": "^1.6.1",
		"pug": "^2.0.3",
		"sass": "^1.19.0",
		"stylelint": "^10.0.1",
		"stylelint-config-standard": "^18.3.0",
		"stylelint-order": "^3.0.0"
