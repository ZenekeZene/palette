{
	"name": "Palette",
	"version": "1.0.0",
	"description": "Juego casual de PilPilGames",
	"main": "index.pug",
	"scripts": {
		"start": "parcel index.pug --open",
		"build": "parcel build index.pug",
		"add-android": "npx cap add android && npx cap copy",
		"add-ios": "npx cap add ios && npx cap sync && npx cap copy",
